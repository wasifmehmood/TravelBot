<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reviewNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daewoo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/reviewTypeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewNameTv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="luxury"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/reviewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewTypeTv"
        android:layout_marginLeft="20dp"
        android:text="Review:"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/reviewTextTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewLabel"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:text="It was a great ride"
        android:background="@drawable/text_bg"/>
</RelativeLayout>