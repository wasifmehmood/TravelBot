<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <TextView
            android:id="@+id/serviceNameTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Name: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/serviceNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/serviceNameTv1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serviceTypeTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceNameTv1"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="10dp"
            android:text="Type: "
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/serviceTypeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceNameEt"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:layout_toRightOf="@+id/serviceTypeTv1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="18sp"
            android:entries="@array/type_arrays"
            />

        <TextView
            android:id="@+id/servicePriceTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceTypeTv1"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="9dp"
            android:text="Price: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/servicePriceEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceTypeEt"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/servicePriceTv1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/serviceLinkTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/servicePriceTv1"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="19dp"
            android:text="Link: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/serviceLinkEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/servicePriceEt"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/serviceLinkTv1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:inputType="textWebEmailAddress"/>

        <TextView
            android:id="@+id/serviceFromTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceLinkTv1"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="10dp"
            android:text="From: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/serviceFromEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceLinkEt"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/serviceFromTv1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serviceToTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceFromTv1"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="34dp"
            android:text="To: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/serviceToEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceFromEt"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/serviceToTv1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/addServiceBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceToEt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Add Service" />

    </RelativeLayout>
</ScrollView>